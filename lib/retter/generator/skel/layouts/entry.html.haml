%article.autopagerize_page_element
  %h1.date
    %a{href: entry_path(entry.date)}= entry.date.strftime('%Y/%m/%d')

  - unless entry.lede.empty?
    = entry.lede

  - entry.articles.each do |article|
    %h1{id: article.id}
      %a{href: article_path(entry.date, article.id)}= article.title
    = article

.nav
  .prev
    - if prev_entry = entry.prev
      %link{href: entry_path(prev_entry.date), rel: :prev}

  .next
    - if next_entry = entry.next
      %link{href: entry_path(next_entry.date), rel: :next}

.autopagerize_insert_before
